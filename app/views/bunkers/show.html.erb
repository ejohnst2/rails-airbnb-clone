<% content_for(:sticky_navbar) do %>
  'none'
<% end %>

<!-- Carousel -->

<%= render 'picture_carousel' %>

<!-- Sticky Header Menu -->

<%= render 'sticky_menu' %>


<!-- Description of Bunker -->

<div class="container">
  <div class="row">
  <div class="page-header">
    <h1><%= @bunker.name %> <small> <%= @bunker.short_description %> </small> </h1>
    <h3>
      <span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Arctic</font></font></span>
      <span class="divider"></span>
      <a href=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><%= @bunker.city %></font></font></a>
      <a href=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"><%= @bunker.country %></font></font></a>
    </h3>
  </div>
</div>


 <!-- Description of Bunker -->

  <div class="row">
   <p id="DescriptionFor"><%= @bunker.description %></p>
 </div>

 <!-- Specs of Bunker -->

    <div class="row" id="SpecificationsFor">
      <h2>Bunker Specs</h2>
      <p><strong>Price: </strong>$<%= @bunker.price %> per night</p>
      <p><strong>Size: </strong><%= @bunker.size %> square meters</p>
    </div>

 <!-- Features of Bunker -->

 <div class="row">
  <h2 id="FeaturesFor"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">What you get</font></font></h2>
</div>

  <div class="row">
    <%= render 'features_set' %>
  </div>

<!-- Location -->

    <div class="row" id="LocationFor">
      <h2>Where is it</h2>
      <p><strong>Location: </strong><%= @bunker.longitude %>, <%= @bunker.latitude %>, <%#= @bunker.location.country %></p>
      <div id="map" style="width: 100%; height: 600px;"></div>
    </div>
  </div>
</div>


<!-- Links and Footer -->

<%= link_to 'View More Bunkers', bunkers_path %>
<% if @bunker.user == @user %>
        <%= link_to 'Edit', edit_bunker_path(@bunker) %>
<% end %>

<% content_for(:after_js) do %>
        <%= javascript_tag do %>
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
      handler.getMap().setZoom(14);
    }
  });
  <% end %>
  <% end %>

<% content_for(:after_js) do %>
<script>
  $(document).ready(function(){
    $("#sticker-sticky-wrapper").sticky({topSpacing:0, className: "is-sticky hey"});
  });
</script>
<% end %>
