<p id="notice"><%= notice %></p>

<h1>Bunkers</h1>

<table>
  <thead>
    <tr>
      <th>Preview</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Location</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bunkers.each do |bunker| %>
      <tr>
        <td><%= cl_image_tag bunker.photos[0].path, width: 100, height: 100, crop: :fill %></td>
        <td><%= bunker.name %></td>
        <td><%= bunker.description %></td>
        <td><%= bunker.price %></td>
        <td><%= bunker.location.country %></td>
        <td><%= link_to 'Show', bunker %></td>
        <td><%= link_to 'Edit', edit_bunker_path(bunker) %></td>
        <td><%= link_to 'Destroy', bunker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bunker', new_bunker_path %>
