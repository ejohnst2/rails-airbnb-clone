<p id="notice"><%= notice %></p>

<h1>Bunkers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Price</th>
      <th>Location</th>
      <th>Review</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @bunkers.each do |bunker| %>
      <tr>
        <td><%= bunker.user %></td>
        <td><%= bunker.price %></td>
        <td><%= bunker.location %></td>
        <td><%= link_to 'Show', bunker %></td>
        <td><%= link_to 'Edit', edit_bunker_path(bunker) %></td>
        <td><%= link_to 'Send message', new_bunker_message_path(bunker.id) %></td>
        <td><%= link_to 'Destroy', bunker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bunker', new_bunker_path %>
