<%= simple_form_for(@bunker) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :price %>
    <%= f.input :size %>
    <%= f.simple_fields_for :location do |l| %>
        <%= l.input :country, as: :string %>
         <%= l.input :longitude %>
          <%= l.input :latitude %>
      <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
