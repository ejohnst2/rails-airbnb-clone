<div class="container">
  <div class="row">
  <div class="col-xs-6 col-sm-offset-2">
    <%= simple_form_for(@bunker) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :price %>
        <%= f.input :size %>
        <%= f.simple_fields_for :location do |l| %>
          <%= l.country_select :country, { priority_countries: ["GB", "FR", "US", "BR"] }, {class: "form-control"} %>
          <%= l.input :longitude %>
          <%= l.input :latitude %>
        <% end %>
      </div>
        <div class="form-actions text-center">
          <%= f.button :submit %>
        </div>
    <% end %>
  </div>
</div>
