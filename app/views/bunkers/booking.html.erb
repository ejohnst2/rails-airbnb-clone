
<h1>Book Your Bunker</h1>

<h2><%= current_user.first_name %>, you're taking the first step to ensuring your future</h2>

<p>
 <%= simple_form_for [@bunker, @trip] do |f| %>
 <%= f.error_notification %>
 <div class="form-inputs">
  <%= f.input :start_date %>
  <%= f.input :end_date %>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
  <% end %>
</p>

<%= link_to 'Go Back to Bunker', bunker_path(@bunker) %>
