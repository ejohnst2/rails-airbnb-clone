<div class="<%= yield(:sticky_navbar).blank? ? 'navbar-wagon-sticky' : yield(:sticky_navbar) %> navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "newlogo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Links -->
    <% if user_signed_in? %>

      <form action="<%= bunkers_path %>" class="form-inline">
        <input type="text" name="query">
        <input type="submit" value="Search">
      </form>

      <%= link_to "List Your Bunker", new_bunker_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "Bunkers", bunkers_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Trips", trips_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Messages", conversations_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <%= image_tag facebook_image(current_user), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
             <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <strong>Sign in</strong>
      <% end %>
      <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <strong>Register</strong>
      <% end %>
    <% end %>


  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
