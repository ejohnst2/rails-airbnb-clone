
<div class="container">
  <h2>Congrats <%= current_user.first_name %>, you are one step closer to survival.</h2>
  <h3> Your Booking: <%= link_to @bunker.name, bunker_path(@bunker) %> in <%= @bunker.country %></h3>

  <div class="row">
    <%= simple_form_for [@bunker, @trip] do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name, input_html: { value: current_user&.first_name } %>
      <%= f.input :last_name, input_html: { value: current_user&.last_name } %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <div class="form-actions text-center">
        <%= f.button :submit, 'Book Your Bunker' %>
      </div>
    </div>
    <% end %>
  </div>

  <%= link_to "Back to Bunker", bunker_path(@bunker) %>
</div>
